{
    "manifest_version": 2,
    "name": "YouTube Tab Pause/Resume",
    "version": "1.0",
    "permissions": [
      "tabs",
      "activeTab"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  